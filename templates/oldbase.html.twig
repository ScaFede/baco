            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="container">


      <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
  <a href="{{ path('app_homepage') }}" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
BaCo    </a>

  <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
    <li><a href="#" class="nav-link px-2 link-secondary">Home</a></li>
    <li><a href="{{ path('app_competenze_bis_index') }}" class="nav-link px-2 link-dark">Conoscenze</a></li>
    <li><a href="{{ path('app_scambi_index') }}" class="nav-link px-2 link-dark">Scambi</a></li>
    <li><a href="#" class="nav-link px-2 link-dark">FAQs</a></li>
    <li><a href="#" class="nav-link px-2 link-dark">Progetto</a></li>
  </ul>

  <div class="col-md-3 text-end">

    <!-- Controlla se l'utente è autenticato -->
    {% if app.user %}

        <span><a href="{{ path('app_user_profile', {'id': app.user.id}) }}">Ciao, {{ app.user.nickname }}!</span></a><a href="{{ path('app_logout') }}" type="button" class="btn btn-outline-primary me-2">Logout</a>
    {% else %}
        <a href="{{ path('app_login') }}" type="button" class="btn btn-outline-primary me-2">Login</a>
        <a href="{{ path('app_register') }}" type="button" class="btn btn-primary">Registrati</a>

    {% endif %}

  <!--  <a href="{{ path('app_login') }}" type="button" class="btn btn-outline-primary me-2">Login</a>-->
  </div>
</header>

  {% block body %}{% endblock %}


    </body>
</html>
