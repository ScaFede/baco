            {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="">





<header class="it-header-wrapper it-header-sticky" data-bs-toggle="sticky" data-bs-position-type="fixed" data-bs-sticky-class-name="is-sticky" data-bs-target="#header-nav-wrapper" style="">
<div class="it-header-slim-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="it-header-slim-wrapper-content">
            <a class="navbar-brand" href="{{ path('app_homepage') }}">
              <img src=" {{ asset('img/bozza-logo_white.png')}}" class="logo " alt="logo BaCo">


              </a>
            <div class="nav-mobile">
              <nav aria-label="Navigazione secondaria">
                <a class="it-opener d-lg-none" data-bs-toggle="collapse" href="#menuC1" role="button" aria-expanded="false" aria-controls="menuC1">
                  <span>Baco</span>
                  <svg class="icon" aria-hidden="true">
                    <use href="/dist/svg/sprites.svg#it-expand"></use>
                  </svg>
                </a>
                <div class="link-list-wrapper collapse" id="menuC1">
                  <ul class="link-list">
                    <li><a class="dropdown-item list-item" href="{{ path('app_competenze_bis_index') }}">Competenze</a></li>
                    <!-- <li><a class="list-item" href="{{ path('app_scambi_index') }}" aria-current="page">Scambi</a></li> -->
                    <li><a class="list-item " href="{{ path('app_user_index') }}" aria-current="page">Community</a></li>
                  {#   <li><a class="dropdown-item list-item" href="#">Progetto</a></li> #}
                    <li><a class="list-item active" href="{{ path('app_faq') }}" aria-current="page">Faq</a></li>
                  </ul>
                </div>
              </nav>
            </div>
            <div class="it-header-slim-right-zone">

              <div class="it-access-top-wrapper">

                <!-- Controlla se l'utente è autenticato -->
                {% if app.user %}

                <!-- <a href="{{ path('app_user_profile', {'id': app.user.id}) }}">Ciao, {{ app.user.nickname }}!</a> -->
                    <a class="btn btn-primary btn-icon btn-sm" href="{{ path('app_user_profile', {'id': app.user.id}) }}" title="Accedi all'area personale" aria-label="Accedi all'area personale" data-focus-mouse="false">
                      {% if app.user.avatar %}
                          {% set avatarPath = asset('uploads/avatar/' ~ app.user.avatar) %}
                          <span class="rounded-icon avatar">
                              <img src="{{ avatarPath }}" class="border rounded-circle icon-white" alt="Avatar di {{ app.user.nickname }}">
                          </span>

                      {% endif %}

                      <span class="d-none d-lg-block">{{ app.user.nickname }}</span>
                    </a>
                    <a href="{{ path('app_logout') }}" type="button" class="btn btn-outline me-2 btn-sm">Esci</a>
                {% else %}




                    <a href="{{ path('app_login') }}" type="button" class="btn btn-secondary  btn-sm">Accedi</a>
                    <a href="{{ path('app_register') }}" type="button" class="btn   btn-outline-secondary btn-sm">Registrati</a>

                {% endif %}

                <!-- <a class="btn btn-primary btn-sm" href="#" data-focus-mouse="false">Accedi</a> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

    <main class="">
      {% block body %}{% endblock %}

    </main>



    </body>
    <footer></footer>
    <script src="  {{ asset('css/bootstrap-italia/js/bootstrap-italia.bundle.min.js')}}"></script>
    <script>bootstrap.loadFonts("  {{ asset('css/bootstrap-italia/fonts')}}")</script>
    <script src="{{ asset('css/bootstrap-italia/js/scripts_comuni.js')}}"></script></body>
</html>
