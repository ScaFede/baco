{% extends 'base.html.twig' %}

{% block title %}Citta index{% endblock %}

{% block body %}
    <h1>Citta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cittum in cittas %}
            <tr>
                <td>{{ cittum.id }}</td>
                <td>{{ cittum.nome }}</td>
                <td>
                    <a href="{{ path('app_citta_show', {'id': cittum.id}) }}">show</a>
                    <a href="{{ path('app_citta_edit', {'id': cittum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_citta_new') }}">Create new</a>
{% endblock %}
