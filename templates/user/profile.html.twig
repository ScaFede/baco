                              {% for flashMessage in app.flashes('scambio_start') %}
                                  <div class="alert alert-success">
                                      {{ flashMessage }}
                                  </div>
                              {% endfor %}




                              <div class="card-text">



                              {% if proposta.statusString == 'Iniziato' and proposta.scambioConfermato is null %}
