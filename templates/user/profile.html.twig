                                {% if proposta.userTargetCompetenzaRel %}
                                  Chiesto: {{ proposta.userTargetCompetenzaRel.Titolo }}
                                 {% endif %}<br>

                                 {% if proposta.userSenderCompetenzaRel %}
                                  Proposto: {{ proposta.userSenderCompetenzaRel.Titolo }}
                              {% endif %}
                                </p>

